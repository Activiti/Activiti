<?xml version="1.0" encoding="UTF-8"?>
<definitions xmlns="http://www.omg.org/spec/BPMN/20100524/MODEL"
	xmlns:activiti="http://activiti.org/bpmn" targetNamespace="Examples">

	<process id="testJobEvents">

		<startEvent id="theStart" />

		<sequenceFlow sourceRef="theStart" targetRef="task" />

		<userTask id="task" />

		<boundaryEvent attachedToRef="task" id="timer">
			<timerEventDefinition>
				<timeDuration>PT1H</timeDuration>
			</timerEventDefinition>
		</boundaryEvent>

		<sequenceFlow sourceRef="timer" targetRef="throwException" />

		<scriptTask id="throwException" name="Execute script"
			scriptFormat="groovy">
			<script>
				// Throw an exception in script task
				throw new RuntimeException("This is an exception thrown after timer invocation")
			</script>
		</scriptTask>

		<sequenceFlow sourceRef="throwException" targetRef="theExceptionEnd" />

		<endEvent id="theExceptionEnd" />

		<sequenceFlow sourceRef="task" targetRef="theEnd" />

		<endEvent id="theEnd" />

	</process>

</definitions>
