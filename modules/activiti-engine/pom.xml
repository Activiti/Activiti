						<executions>
							<execution>
								<id>database-test-create-schema</id>
								<phase>process-test-classes</phase>
								<goals>
									<goal>run</goal>
								</goals>
								<configuration>
									<tasks>
										<echo message="updating activiti configuration to db ${database}" />
										<copy file="${basedir}/../../qa/db/activiti.cfg.xml"
