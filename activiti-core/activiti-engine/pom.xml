      </dependency>
    <dependency>
      <groupId>org.apache.commons</groupId>
      <artifactId>commons-email2-core</artifactId>
      <version>2.0.0-M1</version>
     </dependency>
<!-- jakarta.mail is transitive dependency commons-email2-jakarta,
