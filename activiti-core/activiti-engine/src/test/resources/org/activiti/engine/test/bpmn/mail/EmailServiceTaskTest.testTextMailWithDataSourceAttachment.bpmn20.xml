<definitions 
  xmlns="http://www.omg.org/spec/BPMN/20100524/MODEL"
  xmlns:activiti="http://activiti.org/bpmn"
  targetNamespace="Examples">

  <process id="textMailWithDataSourceAttachment" >

    <startEvent id="theStart" />
    <sequenceFlow sourceRef="theStart" targetRef="sendMail" />

    <serviceTask id="sendMail" activiti:type="mail">
      <extensionElements>
        <activiti:field name="to">
          <activiti:string>kermit@activiti.org</activiti:string>
        </activiti:field>
        <activiti:field name="subject">
          <activiti:string>Hello Kermit!</activiti:string>
        </activiti:field>
        <activiti:field name="text">
          <activiti:string>This a text only e-mail.</activiti:string>
        </activiti:field>
        <activiti:field name="attachments">
          <activiti:expression>#{attachmentsBean.getDataSource(fileContent, fileName)}</activiti:expression>
        </activiti:field>
      </extensionElements>
    </serviceTask>
    <sequenceFlow sourceRef="sendMail" targetRef="theEnd" />

    <endEvent id="theEnd" />
  </process>
</definitions>
