<definitions id="definitions"
  xmlns="http://www.omg.org/spec/BPMN/20100524/MODEL"
  xmlns:activiti="http://activiti.org/bpmn"
  targetNamespace="Examples">
  
  <process id="testAutoStoreVariables">
  
    <startEvent id="theStart" />
    <sequenceFlow id="flow1" sourceRef="theStart" targetRef="script1" />

    <scriptTask id="script1" scriptFormat="JavaScript" activiti:autoStoreVariables="false">
      <script><![CDATA[
        
        var sum = a + b;           
            
        ]]></script>
    </scriptTask>
    <sequenceFlow id="flow2" sourceRef="script1" targetRef="task1" />
    
    <userTask id="task1" />
    <sequenceFlow id="flow3" sourceRef="task1" targetRef="script2" />

    <scriptTask id="script2" scriptFormat="JavaScript">
      <script><![CDATA[
        
        var sum = a + b;           
        execution.setVariable("sum", sum);
            
        ]]></script>
    </scriptTask>
    <sequenceFlow id="flow4" sourceRef="script2" targetRef="task2" />

    <userTask id="task2" />
    <sequenceFlow id="flow5" sourceRef="task2" targetRef="theEnd" />

    <endEvent id="theEnd" />

  </process>

</definitions>